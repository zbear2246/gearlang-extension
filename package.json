{
    "name": "gearlang",
    "displayName": "GearLang",
    "description": "Syntax highlights for the GearLang Language",
    "version": "0.0.2",
    "main": "client/out/extension.js",
    "publisher": "zbear2246",
    "engines": {
        "vscode": "^1.22.0"
    },
    "scripts": {
        "postinstall": "npm install --prefix client && npm install --prefix server",
        "compile": "npm run compile --prefix client && npm run compile --prefix server",
        "watch": "npm run watch --prefix client && npm run watch --prefix server"
    },
    "activationEvents": [
        "onLanguage:gearlang"
    ],
    "contributes": {
        "languages": [
            {
                "id": "gearlang",
                "aliases": [
                    "GearLang",
                    "gear"
                ],
                "extensions": [
                    ".gear",
                    ".gearlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gearlang",
                "scopeName": "source.gear",
                "path": "./syntaxes/gearlang.tmLanguage.json"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kwphil/gearlang"
    },
    "devDependencies": {
        "@types/vscode": "1.109.0",
        "typescript": "5.9.3"
    }
}
